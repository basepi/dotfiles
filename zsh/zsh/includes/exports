# Exports

# General
export TERM="xterm-256color"
if [[ `uname -s` == *CYGWIN* ]]; then
    export TERM="cygwin"
fi
export DISPLAY=:0.0

export CLICOLOR='Yes'
# I use dircolors now, but this LSCOLORS is easier on the eyes than the default
# if you're stuck without 256 colors in ls.
#export LSCOLORS='cxfxexdxbxegedabagacad'

# Unicode support
export LANG=en_US.UTF-8
# ASCII version
#export LANG=C

# Editor settings
export EDITOR=vim
export VISUAL=vim
export SVN_EDITOR=vim

# Graphviz DOT stuff for Doxygen
export DOT_PATH=/Applications/Graphviz.app/Contents/MacOS
export HAVE_DOT=YES
export SHORT_NAMES=YES

# PATH (yes, it's messy)
export PATH=/home/linuxbrew/.linuxbrew/bin:/usr/local/bin:/usr/local/include:/usr/local/lib:/usr/bin:/usr/include:/usr/lib:/Library/TeX/texbin:/usr/local/bin:/usr/local/sbin:/opt/local/bin:/opt/local/sbin:/usr/bin:/bin:/usr/sbin:/Users/basepi/bin:/Applications/Doxygen.app/Contents/Resources:/Applications/Doxygen.app/Contents/MacOS:/Applications/Graphviz.app/Contents/MacOS:/sbin:/Applications/Racket\ v5.3.3/bin:/usr/local/Cellar/gems/1.9/bin

# GREP
export GREP_COLOR='1;32'

# Pager (less)
export PAGER=less
export LC_CTYPE=en_US.UTF-8

# Ruby
export GEM_HOME='/usr/local/Cellar/gems/1.9'

# Vagrant
export VAGRANT_DEFAULT_PROVIDER=virtualbox

# Pip
export PIP_REQUIRE_VIRTUALENV=true
