# Exports

# General
export TERM="xterm-256color"
if [[ `uname -s` == *CYGWIN* ]]; then
    export TERM="cygwin"
fi
export DISPLAY=:0.0

export CLICOLOR='Yes'
# I use dircolors now, but this LSCOLORS is easier on the eyes than the default
# if you're stuck without 256 colors in ls.
#export LSCOLORS='cxfxexdxbxegedabagacad'

# Unicode support
export LANG=en_US.UTF-8
# ASCII version
#export LANG=C

# Editor settings
export EDITOR=vim
export VISUAL=vim
export SVN_EDITOR=vim

# PATH (yes, it's messy)
export PATH=/opt/homebrew/bin:/home/linuxbrew/.linuxbrew/bin:/usr/local/bin:/usr/local/sbin:/usr/local/include:/usr/local/lib:/usr/bin:/usr/include:/usr/lib:/Library/TeX/texbin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin

# pyenv
eval "$(pyenv init --path)"

# GREP
export GREP_COLOR='1;32'

# Pager (less)
export PAGER=less
export LC_CTYPE=en_US.UTF-8

# Pip
export PIP_REQUIRE_VIRTUALENV=true
